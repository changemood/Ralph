<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<tbody>
  <% @board.cards.each do |card| %>
    <tr>
      <td><%= card.title %></td>
      <td><%= card.body %></td>
      <td><%= link_to 'Show', board_card_path(@board, card) %></td>
      <td><%= link_to 'Edit', edit_board_card_path(@board, card) %></td>
      <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>

<p>
<td><%= link_to 'Add Card', new_board_card_path(@board) %></td>
<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
</p>
